<%= form_tag sessions_path, :class => 'simple_form' do %> 
<fieldset>
<legend>Log in</legend>
<div class="control-group">
	<p>  
	    <%= label_tag :email %>
	    <%= text_field_tag :email, params[:email] %>  
	  </p>  
	  <p>  
	    <%= label_tag :password %> 
	    <%= password_field_tag :password %>  
	  </p>  
	  <p><%= submit_tag %></p>
</div>
</fieldset>
<% end %>